<%- include('../includes/webHeader.ejs') %>

<style>
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .breadcrumb-main {
        background-color: #007bff;
        padding: 10px 0;
    }

    .breadcrumb-container {
        display: flex;
        justify-content: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        list-style: none;
        color: #fff;
    }

    .breadcrumb li {
        display: inline;
        font-size: 1.2em;
    }

    .breadcrumb li a {
        color: #fff;
        text-decoration: none;
    }

    .breadcrumb li a:hover {
        text-decoration: underline;
    }

    .breadcrumb li + li::before {
        content: " / ";
        padding: 0 5px;
        color: #fff;
    }

    .blog-section {
        padding: 40px 0;
    }

    .my-account {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
        color: #333;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table th {
        background-color: #f8f9fa;
    }

    .table .text-center a {
        margin: 0 5px;
        color: #007bff;
    }

    .table .text-center a:hover {
        text-decoration: underline;
    }

    .btn-custom {
        background-color: wheat;
        margin: 2px !important;
        color: #fff;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-custom:hover {
        background-color: white;
        color: #fff;
    }
</style>

<!-- My Account -->
<div class="">
    <div class="container">
        <div class="row">
            <%- include('../includes/customerSidebar.ejs') %>
            <div id="content" class="col-sm-9 all-blog my-account">
                <h1>My Orders</h1>
                
                <!-- Search Input -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input id="searchInput" class="form-control" type="text" placeholder="Search...">
                    </div>
                </div>

                <!-- Orders Table -->
                <div class="table-responsive">
                    <table id="orderTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Date</th>
                                <th class="text-center">Order ID</th>
                                <th class="text-center">Total Amount</th>
                                <th class="text-center">Order Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let perPage=20 %>
                            <% let i = (currentPage - 1) * perPage + 1; %>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td class="text-center"><%- new Date(order.created_at).toLocaleDateString('en-IN') %></td>
                                    <td class="text-center"><%= order.order_id %></td>
                                    <td class="text-center">â‚¹ <%= order.total_amount %></td>
                                   <td class="text-center">
                                        <% if (order.status === 'approved') { %>
                                            <p class="text-primary">Approved by Seller</p>
                                        <% } else if (order.status === 'shipped') { %>
                                            <p class="text-warning">Order Shipped</p>
                                        <% } else if (order.status === 'out_of_delivery') { %>
                                            <p class="text-warning">Out Of Delivery</p>
                                        <% } else if (order.status === 'delivered') { %>
                                            <p class="text-success">Delivered</p>
                                        <% } else if (order.status === 'cancelled') { %>
                                            <p class="text-danger">Cancelled</p>
                                        <% } else { %>
                                            Pending
                                        <% } %>
                                    </td>

                                    <td class="text-center">
                                        <a href="/orderDetails/<%= order.id %>" class="btn btn-custom"><img src="../../assets/images/track.png" width="42px" alt=""></a>
                                        <!-- Add more actions as needed -->
                                    </td>
                                </tr>
                                <% i++; %>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav>
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=1">&laquo;</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>">&lsaquo;</a>
                            </li>
                        <% } %>
                        <% for (let page = 1; page <= totalPages; page++) { %>
                            <li class="page-item <%= page === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= page %>"><%= page %></a>
                            </li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>">&rsaquo;</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= totalPages %>">&raquo;</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- .My Account -->

<!-- Toastr notification handling -->
<% if (typeof error !== 'undefined') { %>
    <script>
        toastr.error('<%= error %>');
    </script>
<% } %>
<% if (typeof success !== 'undefined') { %>
    <script>
        toastr.success('<%= success %>');
    </script>
<% } %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
    $(document).ready(function() {
        // Handle search input change
        $('#searchInput').on('keyup', function () {
            const searchQuery = $(this).val().toLowerCase();
            filterOrders(searchQuery);
        });

        // Function to filter orders based on search query
        function filterOrders(query) {
            $('#orderTable tbody tr').each(function() {
                const orderText = $(this).text().toLowerCase();
                if (orderText.indexOf(query) === -1) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            });
        }
    });
</script>

