<%- include('../includes/webHeader.ejs') %>

    <!-- My Account -->
    <section>
		<div class="breadcrumb-main">
			<div class="container">
				<div class="breadcrumb-container">
					<ul class="breadcrumb">
						<li><a href="index"><i class="fa fa-home"></i></a></li>
                                <li><a href="my-account">Account </a></li>
                                <li><a href="my-account">Login</a></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
    <div class="blog-section">
        <div class="container">
            <div class="row">
                <%- include('../includes/customerSidebar.ejs') %>
                <div id="content" class="col-sm-9  all-blog my-account">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well">
                                <h2>My Profile</h2>
                                <form action="myprofile" method="post">
                                    <div class="form-group">
                                        <label class="control-label" for="input-name">Name</label>
                                        <input type="text" name="name" value="<%= user.name || '' %>" placeholder="Name"
                                            id="input-name" class="form-control">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label" for="input-email">E-Mail Address</label>
                                        <input type="text" name="email" value="<%= user.email || '' %>" placeholder="E-Mail Address"
                                            id="input-email" class="form-control">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label" for="input-contactNumber">Contact Number</label>
                                        <input type="text" name="contactNumber" value="<%= user.contactNumber || '' %>" placeholder="Contact Number"
                                            id="input-contactNumber" class="form-control">
                                    </div>
                                    
                                    
                                    <div class="form-group">
                                        <label class="control-label" for="input-role">Role</label>
                                        <input type="text" name="role" value="<%= user.role || '' %>" placeholder="Role"
                                        id="input-role" class="form-control">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label" for="input-password">Password</label>
                                        <input type="password" name="password" value="" placeholder="Password"
                                            id="input-password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="input-password">Confirm Password</label>
                                        <input type="password" name="cpassword" value="" placeholder="confirm Password"
                                            id="input-password" class="form-control">
                                        <a href="#">Forgotten Password</a>
                                    </div>
                                    <input type="submit" value="Save Profile" class="btn btn-primary">
                                    <input type="hidden" name="redirect" value="">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .My Account -->
	 <!-- Toastr notification handling -->
     <% if (typeof error !== 'undefined') { %>
        <script>
            toastr.error('<%= error %>');
        </script>
    <% } %>
    <% if (typeof success !== 'undefined') { %>
        <script>
            toastr.success('<%= success %>');
        </script>
    <% } %>
