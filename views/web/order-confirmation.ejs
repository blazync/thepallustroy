<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <style>
        /* styles.css */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

header {
    text-align: center;
    padding: 20px 0;
    background-color: #007bff;
    color: #fff;
}

header h1 {
    margin: 0;
}

.thank-you-message {
    text-align: center;
    margin: 20px 0;
}

.order-details, .customer-info {
    margin: 20px 0;
}

h3 {
    border-bottom: 2px solid #007bff;
    padding-bottom: 10px;
}

table {
    width: 100%;
    border-collapse: collapse;
}

table th, table td {
    text-align: left;
    padding: 10px;
    border: 1px solid #ddd;
}

footer {
    text-align: center;
    padding: 10px 0;
    background-color: #007bff;
    color: #fff;
    margin-top: 20px;
}

    </style>
    
</head>
<body>
    <% if (typeof paymentSuccess !== 'undefined' && paymentSuccess) { %>
    <div class="container">
        <header>
            <h1>Order Confirmation</h1>
        </header>
        <main>
            <section class="thank-you-message">
                <h2>Thank You for Your Purchase!</h2>
                <p>Your order has been successfully placed. Below are your order details.</p>
            </section>
            <section class="order-details">
                <h3>Order Details</h3>
                <table>
                    <tr>
                        <th>Order Number:</th>
                        <td><%= order_info.order_id %></td>
                    </tr>
                    <tr>
                        <th>Date:</th>
                        <td><%= order_info.created_at %></td>
                    </tr>
                    <tr>
                        <th>Total Amount:</th>
                        <td><%= order_info.total_amount %> â‚¹</td>
                    </tr>
                </table>
            </section>
            <section class="customer-info">
                <h3>Customer Information</h3>
                <table>
                    <tr>
                        <th>Name:</th>
                        <td><%= userData.name %></td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td><%= userData.email %></td>
                    </tr>
                    <tr>
                        <th>Shipping Address:</th>
                        <td><%= order_info.shipping_address %></td>
                    </tr>
                </table>
            </section>
        </main>
        <footer>
              <h1>You will be redirected in <span id="countdown">5</span> seconds.</h1>
        </footer>
    </div>

    

    <script>
        localStorage.removeItem('cartItems');
        const countdownElement = document.getElementById('countdown');
        let seconds = 5;

        const intervalId = setInterval(() => {
        seconds--;
        countdownElement.textContent = seconds;

        if (seconds === 0) {
            clearInterval(intervalId);
            window.location.href = "/myorder"; // Replace with your target URL
        }
        }, 5000);


    </script>
<% } %>
</body>
</html>